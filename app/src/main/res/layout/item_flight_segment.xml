<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <TextView
        android:id="@+id/departure_time_text_view"
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:layout_marginEnd="5dp"
        android:text="XX:XX"
        android:textSize="26dp"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/flight_trip_main_line"
        app:layout_constraintEnd_toStartOf="@+id/flight_trip_main_line"
        app:layout_constraintTop_toTopOf="@+id/flight_trip_main_line" />

    <TextView
        android:id="@+id/arrival_time_text_view"
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:layout_marginStart="5dp"
        android:text="XX:XX"
        android:textSize="26dp"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/flight_trip_main_line"
        app:layout_constraintStart_toEndOf="@+id/flight_trip_main_line"
        app:layout_constraintTop_toTopOf="@+id/flight_trip_main_line"
        />

    <View
        android:id="@+id/flight_trip_main_line"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/departure_city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure City"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/departure_time_text_view"
        app:layout_constraintEnd_toEndOf="@+id/departure_time_text_view"
        app:layout_constraintStart_toStartOf="@+id/departure_time_text_view" />


    <TextView
        android:id="@+id/arrival_city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrival City"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/arrival_time_text_view"
        app:layout_constraintEnd_toEndOf="@+id/arrival_time_text_view"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/arrival_time_text_view" />

    <TextView
        android:id="@+id/departure_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MMMM DD, YYYY"
        android:gravity="center|center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/departure_time_text_view"
        app:layout_constraintStart_toStartOf="@+id/departure_time_text_view"
        app:layout_constraintTop_toBottomOf="@+id/departure_time_text_view" />

    <TextView
        android:id="@+id/arrival_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MMMM DD, YYYY"
        android:gravity="center|center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/arrival_time_text_view"
        app:layout_constraintStart_toStartOf="@+id/arrival_time_text_view"
        app:layout_constraintTop_toBottomOf="@+id/arrival_time_text_view" />

    <TextView
        android:id="@+id/airline_text_view"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Airline Service"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/flight_trip_main_line"
        app:layout_constraintEnd_toEndOf="@+id/flight_trip_main_line"
        app:layout_constraintStart_toStartOf="@+id/flight_trip_main_line" />

    <TextView
        android:id="@+id/flight_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="######"
        app:layout_constraintEnd_toEndOf="@+id/flight_trip_main_line"
        app:layout_constraintStart_toStartOf="@+id/flight_trip_main_line"
        app:layout_constraintTop_toBottomOf="@+id/airline_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>